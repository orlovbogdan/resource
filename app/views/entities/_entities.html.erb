<% @entities.each do |entity| %>
    <tr id="<%= 'page' + @entities.current_page.to_s if entity == @entities.first %>" data-page="<%= @entities.current_page %>" data-time="<%= entity.created_at %>">
      <td><%= entity.name %></td>
      <td><%= entity.price %></td>
      <td><%= entity.created_at %></td>
      <td><%= link_to 'Show', entity %></td>
      <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
      <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
<% end %>